{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist/cli",
    "rootDir": "src/cli",
    "sourceMap": true,
    "composite": true,
    "declaration": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["src/shared/*"]
    }
  },
  "references": [
    { "path": "./tsconfig.shared.json" }
  ],
  "include": ["src/cli/**/*"],
  "exclude": ["node_modules"]
}
