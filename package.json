{
  "name": "media-server-wizard",
  "version": "1.0.0",
  "description": "Interactive wizard for deploying media server stack with Docker",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "concurrently -k \"cross-env BROWSER=none npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on tcp:3000 -t 30000 && tsc -p tsconfig.node.json && cross-env NODE_ENV=development electron .",
    "build": "npm run clean && npm run build:vite && npm run build:electron",
    "build:vite": "tsc && vite build",
    "build:electron": "tsc -p tsconfig.node.json && npm run copy-preload",
    "copy-preload": "cp dist/main/preload.js dist/main/preload.js",
    "preview": "vite preview",
    "package": "npm run build && electron-builder build --mac --win --linux",
    "package:dir": "npm run build && electron-builder build --dir",
    "package:mac": "npm run build && electron-builder build --mac",
    "package:win": "npm run build && electron-builder build --win",
    "package:linux": "npm run build && electron-builder build --linux",
    "clean": "rimraf dist build",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "test": "jest"
  },
  "dependencies": {
    "@chakra-ui/icons": "^2.1.1",
    "@chakra-ui/react": "^2.8.2",
    "@emotion/react": "^11.11.3",
    "@emotion/styled": "^11.11.0",
    "dockerode": "^4.0.0",
    "electron-is-dev": "^2.0.0",
    "formik": "^2.4.5",
    "framer-motion": "^10.17.9",
    "fs-extra": "^11.2.0",
    "lru-cache": "^10.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.1",
    "yaml": "^2.3.4",
    "yup": "^1.3.3"
  },
  "devDependencies": {
    "@types/dockerode": "^3.3.23",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.1.1",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "eslint-plugin-react": "^7.33.2",
    "glob": "^10.3.10",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.mediaserver.wizard",
    "productName": "Media Server Wizard",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": ["dmg", "zip"]
    },
    "win": {
      "target": ["nsis", "portable"]
    },
    "linux": {
      "target": ["AppImage", "deb", "rpm"],
      "category": "Utility"
    }
  }
}
